<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 配置全局属性 -->
    
    <settings>
        <!-- 使用 jdbc 的 getGeneratedKeys 获取数据库的自增主键       -->
        <setting name="useGeneratedKeys" value="ture"/>
        <!-- 使用列别替换列名，默认是：true
            select name as title from table
            这里mybatis会自动把列名填充到对应pojo的属性名上
         -->
        <setting name="userColumnLabel" value="true"/>
        <!-- 开启驼峰命名转换：因为mysql中的命名规范是Table(create_time) ->  POJO (createTime) -->
        <setting name="mapUnderscoreCamelCase" value="true"/>

    </settings>

</configuration>